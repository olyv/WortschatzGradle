<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1" >

        <EditText
                android:id="@+id/verb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_large"
                android:gravity="center"
                android:layout_margin="20dp"
                android:hint="@string/enter_verb_hint"
                android:singleLine="true"/>

        <EditText
                android:id="@+id/verbTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_large"
                android:layout_margin="20dp"
                android:gravity="center"
                android:hint="@string/enter_translation_hint"
                android:singleLine="true"/>

                <RadioGroup
                        android:id="@+id/auxverbSelect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">

                        <RadioButton
                                android:id="@+id/auxverbHat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:gravity="center"
                                android:text="@string/hat"
                                android:textSize="@dimen/text_size_large"
                                android:layout_margin="10dp"/>

                        <RadioButton
                                android:id="@+id/auxverbIst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/ist"
                                android:textSize="@dimen/text_size_large"
                                android:layout_margin="10dp"/>
                </RadioGroup>

                <EditText
                        android:id="@+id/verbPartizip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:hint="@string/verb_partizip_hint"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_large"
                        android:gravity="center"/>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="@dimen/start_activity_button_width"
            android:padding="@dimen/button_padding"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_large"
            android:layout_gravity="center_horizontal"
            android:text="@string/save_button_text"
            android:layout_height="@dimen/start_activity_button_height"
            android:layout_margin="25dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>