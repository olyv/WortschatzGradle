<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true" >

        <TextView
                android:id="@+id/adjektiveTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adjektive_task"
                android:textSize="@dimen/text_size_small"
                android:layout_margin="16dp"/>

        <TextView
                android:id="@+id/adjektive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:layout_marginLeft="16dp"/>

        <EditText
                android:id="@+id/enteredAdjeltiveTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="@string/enter_translation_hint"
                android:singleLine="true"
                android:textSize="@dimen/text_size_large"
                android:gravity="center_horizontal|bottom"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"/>

        <TextView
            android:id="@+id/correctTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:background="@drawable/edit_text_correct"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            android:padding="16dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/inCorrectTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:background="@drawable/edit_text_error"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            android:padding="16dp"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/submitAnswerBtn"
            android:layout_width="@dimen/start_activity_button_width"
            android:background="@drawable/button"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_large"
            android:layout_gravity="center_horizontal"
            android:text="@string/submit"
            android:layout_height="@dimen/start_activity_button_height"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"/>
</LinearLayout>