<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        <LinearLayout android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="16dp"
                      android:layout_marginRight="16dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1">

                        <EditText
                                android:id="@+id/noun"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:textSize="@dimen/text_size_large"
                                android:singleLine="true"
                                android:layout_margin="5dp"
                                android:hint="@string/enter_noun_hint"
                                android:layout_weight="1"/>

                        <EditText
                                android:id="@+id/nounTranslation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center_vertical|center_horizontal"
                                android:textSize="@dimen/text_size_large"
                                android:singleLine="true"
                                android:layout_margin="5dp"
                                android:hint="@string/enter_translation_hint"
                                android:layout_weight="1"/>

                </LinearLayout>

            <RadioGroup
                    android:id="@+id/articleSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1">

                <RadioButton
                        android:id="@+id/articleDer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/der"
                        android:textSize="@dimen/text_size_large"
                        android:checked="true"
                        android:layout_margin="10dp" />

                <RadioButton
                        android:id="@+id/articleDie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/die"
                        android:textSize="@dimen/text_size_large"
                        android:layout_margin="10dp" />

                <RadioButton
                        android:id="@+id/articleDas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/das"
                        android:textSize="@dimen/text_size_large"
                        android:layout_margin="10dp" />
            </RadioGroup>

            <EditText
                    android:id="@+id/nounPlural"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:hint="@string/noun_plural_hint"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="0.25"/>

                <Button
                        android:id="@+id/saveBtn"
                        android:layout_width="@dimen/start_activity_button_width"
                        android:padding="@dimen/button_padding"
                        android:background="@drawable/button"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_large"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/save_button_text"
                        android:layout_height="@dimen/start_activity_button_height"
                        android:layout_margin="25dp"/>

            <LinearLayout
                android:id="@+id/editorVerb"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/translator"/>
            </LinearLayout>

        </LinearLayout>
</ScrollView>