<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true" >

        <TextView
                android:id="@+id/adjektiveTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adjektive_task"
                android:textSize="@dimen/text_size_small"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        <TextView
                android:id="@+id/adjektive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <EditText
                android:id="@+id/enteredAdjeltiveTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="@string/enter_translation_hint"
                android:singleLine="true"
                android:textSize="@dimen/text_size_large"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/correctTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="@string/enter_translation_hint"
                android:textSize="@dimen/text_size_large"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/edit_text_correct"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="25dp"/>

        <TextView
                android:id="@+id/inCorrectTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="@string/enter_translation_hint"
                android:textSize="@dimen/text_size_large"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/edit_text_error"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="25dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        <Button
                android:id="@+id/submitAnswerBtn"
                android:layout_width="@dimen/start_activity_button_width"
                android:background="@drawable/button"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_large"
                android:layout_gravity="center_horizontal"
                android:text="@string/submit"
                android:layout_height="@dimen/start_activity_button_height"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"/>
</LinearLayout>