<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.olyv.wortschatz.ui"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- required permissions for Google Mobile Ads to run-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-sdk android:minSdkVersion="17"/>

    <application android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher">

        <!--meta-data tag required to use Google Play Services.-->
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".StartActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme"
                  android:logo="@drawable/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".lesson.LessonActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".manager.LessonItemsManagerActivity"
                android:configChanges="orientation|screenSize"
                android:label="@string/manage_lesson_items"
                android:theme="@style/AppTheme"
                android:launchMode="singleTop">
                <intent-filter>
                    <action android:name="android.intent.action.SEARCH" />
                </intent-filter>
                <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".editor.LessonItemEditorActivity"
                  android:label="@string/manage_lesson_items"
                  android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".editor.AddNewItemActivity"
                  android:label="@string/add_lesson_item"
                  android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".settings.SettingsActivity"
                android:label="Settings" >
                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".StartActivity" />
        </activity>
        <!-- AdActivity configChanges and theme required for ads -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <receiver android:name=".StartActivity$AlarmReceiver"/>
    </application>
</manifest>
