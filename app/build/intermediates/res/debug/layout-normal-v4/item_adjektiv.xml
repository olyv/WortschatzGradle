<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true" >

        <TextView
                android:id="@+id/adjektiveTask"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/adjektive_task"
                android:textSize="@dimen/text_size_small"
                android:layout_margin="16dp"/>

        <TextView
                android:id="@+id/adjektive"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

        <EditText
                android:id="@+id/enteredAdjeltiveTranslation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="@string/enter_translation_hint"
                android:singleLine="true"
                android:textSize="@dimen/text_size_large"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="25dp"/>

        <Button
                android:id="@+id/submitAnswerBtn"
                android:layout_width="@dimen/start_activity_button_width"
                android:background="@drawable/button"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_large"
                android:layout_gravity="center_horizontal"
                android:text="@string/submit"
                android:layout_height="@dimen/start_activity_button_height"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="50dp"/>

</LinearLayout><!-- From: file:/C:/Users/Oleksandr_Lyvin@epam.com/AndroidstudioProjects/wortschatz/app/src/main/res/layout-normal/item_adjektiv.xml -->