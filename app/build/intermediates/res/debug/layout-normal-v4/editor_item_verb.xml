<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

        <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="25dp"/>

                <EditText
                        android:id="@+id/verb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/text_size_large"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_margin="20dp"
                        android:singleLine="true"
                        android:hint="@string/enter_verb_hint"/>

                <EditText
                        android:id="@+id/verbTranslation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/text_size_large"
                        android:layout_margin="20dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:singleLine="true"
                        android:hint="@string/enter_translation_hint"/>

                <RadioGroup
                        android:id="@+id/auxverbSelect"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:layout_weight="0.5">

                        <RadioButton
                                android:id="@+id/auxverbHat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/hat"
                                android:textSize="@dimen/text_size_large"
                                android:layout_margin="10dp"/>

                        <RadioButton
                                android:id="@+id/auxverbIst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/ist"
                                android:textSize="@dimen/text_size_large"
                                android:layout_margin="10dp"/>
                </RadioGroup>

                <EditText
                        android:id="@+id/verbPartizip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:hint="@string/verb_partizip_hint"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_large"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_margin="20dp" />

                <Button
                        android:id="@+id/saveBtn"
                        android:layout_width="@dimen/start_activity_button_width"
                        android:padding="@dimen/button_padding"
                        android:background="@drawable/button"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_large"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/save_button_text"
                        android:layout_height="@dimen/start_activity_button_height"
                        android:layout_margin="25dp"/>

        </LinearLayout>
</ScrollView><!-- From: file:/C:/Users/Oleksandr_Lyvin@epam.com/AndroidstudioProjects/wortschatz/app/src/main/res/layout-normal/editor_item_verb.xml -->