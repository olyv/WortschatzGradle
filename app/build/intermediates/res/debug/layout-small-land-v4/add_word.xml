<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/item_type_spinner_label"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"/>
        <Spinner
                android:id="@+id/selectTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_medium"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/editorVerb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <include layout="@layout/editor_item_verb"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/editorNoun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <include layout="@layout/editor_item_noun"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/editorAdjektive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <include layout="@layout/editor_item_adjektiv"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Oleksandr_Lyvin@epam.com/AndroidstudioProjects/wortschatz/app/src/main/res/layout-small-land/add_word.xml -->